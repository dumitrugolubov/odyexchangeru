---
import Layout from '../layouts/Layout.astro';
import SeoText from '../components/SeoText.astro';

const keywords = [
    'Odyssey Exchange',
    'Ody Exchange',
    'Одиссей биржа',
    'Биржа Одиссея'
];
---

<Layout 
	title="Odyssey Exchange | Официальный сайт - Первая мем-коин биржа"
	description="Odyssey Exchange - первая биржа, сконцентрированная на мемах. 0% спот комиссии, 10% возврата с ликвидации, партнерские комиссии до 50% и кредитные плечи до 777x. Торгуйте мем-койнами с лучшими условиями."
>
	<main>
		<section class="hero">
			<h1>Odyssey Exchange</h1>
			<p class="subtitle">Первая мем-коин биржа</p>
			<a href="https://ody.lol" class="cta-button">Перейти на биржу</a>
			<div class="features-grid">
				<div class="feature">
					<h3>0%</h3>
					<p>Спот комиссия</p>
				</div>
				<div class="feature">
					<h3>10%</h3>
					<p>Возврат с ликвидации</p>
				</div>
				<div class="feature">
					<h3>50%</h3>
					<p>Партнерские комиссии</p>
				</div>
				<div class="feature">
					<h3>777x</h3>
					<p>Максимальное плечо</p>
				</div>
			</div>
		</section>
		<SeoText keywords={keywords} />
	</main>
</Layout>

<style>
	main {
		margin-top: 4rem;
	}
	.hero {
		padding: 6rem 1rem;
		text-align: center;
		max-width: 1200px;
		margin: 0 auto;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		margin-bottom: 1rem;
		background: linear-gradient(45deg, #3b82f6, #2563eb);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
	.subtitle {
		font-size: 1.5rem;
		color: #94a3b8;
		margin-bottom: 3rem;
	}
	.cta-button {
		display: inline-block;
		background: linear-gradient(45deg, #3b82f6, #2563eb);
		color: white;
		padding: 1rem 2rem;
		border-radius: 0.5rem;
		font-size: 1.25rem;
		font-weight: 600;
		text-decoration: none;
		margin-bottom: 4rem;
		transition: transform 0.2s;
	}
	.cta-button:hover {
		transform: translateY(-2px);
	}
	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
		margin-top: 4rem;
	}
	.feature {
		padding: 2rem;
		background: rgba(37, 99, 235, 0.1);
		border-radius: 1rem;
		border: 1px solid rgba(37, 99, 235, 0.2);
	}
	.feature h3 {
		font-size: 2.5rem;
		color: #3b82f6;
		margin: 0;
	}
	.feature p {
		margin: 0.5rem 0 0;
		color: #94a3b8;
	}
</style>